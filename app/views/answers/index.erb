<% if @answers %>
  <ul>
    <% @answers.each do |answer| %>
        <% if @question.best_answer_id == answer.id %>
          <i class="material-icons #ffc107 amber">grade</i>
          <%= erb :'/answers/_each_answer', locals: {answer: answer} %>
        <% end %>
    <% end %>
    <% @answers.each do |answer| %>
      <% if @question.best_answer_id != answer.id %>
        <%= erb :'/answers/_each_answer', locals: {answer: answer} %>
      <% end %>
    <% end %>
  </ul>
<% end %>
